<!DOCTYPE html>
<html>
  <head>
    <title>AdoptDontShopM2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head><br>

  <header>
    <div class="nav-bar">
      <ul>
        <p><%= link_to "Back to Home", "/" %>
          <%= link_to "Go to Shelters", "/shelters" %>
          <%= link_to 'Go to Pets', "/pets" %>
  </header><br>

  <body>
    <section id= 'flash-notice'>
    <% flash.each do |type, messages| %>
      <% messages.each do |message| %>
        <p><%= message %></p>
      <% end %>
    <% end %>
    </section>
        
    <%= yield %>
  </body>
</html>
